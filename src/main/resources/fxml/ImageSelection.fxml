<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="editionPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="passwordManager.controleur.ImageSelection">
   <children>
      <BorderPane fx:id="root" prefHeight="200.0" prefWidth="200.0" styleClass="editionBox" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                <Button fx:id="bOk" mnemonicParsing="false" onAction="#ok" text="Ok" />
                  <Button fx:id="bAnnuler" mnemonicParsing="false" onAction="#annuler" text="Annuler" />
              </buttons>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </ButtonBar>
         </bottom>
         <right>
            <BorderPane BorderPane.alignment="CENTER">
               <top>
                  <VBox BorderPane.alignment="CENTER">
                     <children>
                        <Label styleClass="lEmphase" text="Selection" />
                        <ImageView fx:id="ivIcone" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </top>
               <center>
                  <Button fx:id="bAjout" mnemonicParsing="false" onAction="#selectionIcone" styleClass="boutonMod" text="Ordi" BorderPane.alignment="CENTER" />
               </center>
               <bottom>
                  <Button fx:id="bSuppression" mnemonicParsing="false" onAction="#suppressionIcone" styleClass="boutonMod" text="Del" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </right>
         <top>
            <Label styleClass="titre" text="Choix de l'icone" BorderPane.alignment="CENTER_LEFT" />
         </top>
      </BorderPane>
   </children>
</AnchorPane>
