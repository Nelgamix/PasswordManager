               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <top>
            <Label fx:id="lTitre" styleClass="titre" text="Compte" BorderPane.alignment="CENTER_LEFT" />
